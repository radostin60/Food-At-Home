@using Food_At_Home.Models.Restaurant;
@model RestaurantFormModel;


<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6" style="margin-left: 0px">
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="@Model.Name" class="form-label-add-edit text-black">Name</label>
            <input value = "@Model.Name" asp-for="@Model.Name" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Description" class="form-label-add-edit text-black">Description</label>
            <textarea value="@Model.Description" asp-for="@Model.Description" class="form-control" aria-required="true" rows="5"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Address" class="form-label-add-edit text-black">Address</label>
            <input value ="@Model.Address" asp-for="@Model.Address" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.Address" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.City" class="form-label-add-edit text-black">City</label>
            <input value = "@Model.City" asp-for="@Model.City" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.City" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.PhoneNumber" class="form-label-add-edit text-black">Phone number</label>
            <input value="@Model.PhoneNumber" asp-for="@Model.PhoneNumber" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Save" />
        </div>
    </form>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
